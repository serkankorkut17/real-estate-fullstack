{
	"version": "0.2.0",
	"configurations": [
		{
			"name": ".NET Core Launch (web)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/RealEstate.API/bin/Debug/net8.0/RealEstate.API.dll",
			"args": [],
			"cwd": "${workspaceFolder}/RealEstate.API",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			"sourceFileMap": {
				"/Views": "${workspaceFolder}/Views"
			}
		},
		{
			"name": ".NET Core Attach",
			"type": "coreclr",
			"request": "attach"
		},
		{
			"name": ".NET Core Attach (Docker)",
			"type": "coreclr",
			"request": "attach",
			"processId": "${command:pickRemoteProcess}",
			"sourceFileMap": {
				"/src": "${workspaceFolder}"
			},
			"justMyCode": true,
			"pipeTransport": {
				"pipeProgram": "docker",
				"pipeArgs": ["exec", "-i", "realestate.api"],
				"debuggerPath": "/remote_debugger/vsdbg",
				"pipeCwd": "${workspaceFolder}",
				"quoteArgs": false
			}
		}
	]
}
